<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>com.xeomar</groupId>
	<artifactId>snare</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>Snare</name>
	<description>A utility to make a java module from a jar.</description>
	<inceptionYear>2018</inceptionYear>

	<repositories>
		<repository>
			<id>xeo</id>
			<url>https://code.xeomar.com/repo/xeo</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>xeo</id>
			<url>https://code.xeomar.com/repo/xeo</url>
		</pluginRepository>
	</pluginRepositories>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<java.version>9</java.version>

		<!-- Latest version as of Oct 2018 -->
		<maven.compiler.version>3.8.0</maven.compiler.version>

		<!-- Surefire does not work on Java 11 as of Oct 2018 so skipping tests -->
		<!-- Latest version as of Oct 2018 -->
		<maven.surefire.version>2.22.0</maven.surefire.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-api</artifactId>
			<version>3.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.maven.plugin-tools</groupId>
			<artifactId>maven-plugin-annotations</artifactId>
			<version>3.4</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>${project.basedir}/source/main/java</sourceDirectory>
		<testSourceDirectory>${project.basedir}/source/test/java</testSourceDirectory>
		<outputDirectory>${project.basedir}/target/main/java</outputDirectory>
		<testOutputDirectory>${project.basedir}/target/test/java</testOutputDirectory>

		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.version}</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>

		</plugins>
	</build>

</project>
